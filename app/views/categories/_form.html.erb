<% if category.errors.any? %>
<ul>
    <% category.errors.full_messages.each do |err| %>
        <li><%= err %></li>
    <% end %>
</ul>
<% end %>

<%= form_for category do |form| %>
<table>
  <tr><th>カテゴリ名</th>
    <td><%= form.text_field :name %></td>
  <tr><th></th>
    <td><%= form.submit "送信" %></td></tr>
</table>
<% end %>